def index():
	user = { 'nickname': 'Miguel'} #fake user
	posts = [#fake array
		{
			'author':{'nickname':'John'},
			'body': 'Beautiful day in Portland!'
		},
		{
			'author':{'nickname':'Susan'},
			'body':'The Avengers movie was so cool!'
		},
